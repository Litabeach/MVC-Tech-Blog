{{#each blogs as |blog| }}
<div class="card text-white bg-dark mb-3" style="max-width: 50rem;">
   <div class="card-header"><b><h3>{{blog.title}} </h3></b><p>Created by {{user.name}} on {{format_date blog.createdAt}}</p> </div>
  <div class="card-body">
    <p class="card-text">{{blog.description}}.</p>
      <div class="form-group comment">
        <label for="post-comment">Comment:</label>
        <textarea class="comment-textarea" id="comment-desc" name="comment-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary" id ="newButton">Submit</button>
      </div>
</div>

{{!-- <div id="newElementId">
</div> --}}

  </div>
</div>
{{/each}}  

