<div class="card text-white bg-dark mb-3">
  <div class="col-md-6">
    <h3>Create a New Post:</h3>

    <div class="form new-post">
      <div class="form-group">
        <label for="post-name">Title:</label>
        <input class="form-input" type="text" id="post-name" name="post-name" />
      </div>
      <div class="form-group">
        <label for="post-desc">Content:</label>
        <textarea class="form-input" id="post-desc" name="post-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary submitPost">Create</button>
      </div>
    </div>
  </div>

  <script src="/js/newpost.js"></script>
